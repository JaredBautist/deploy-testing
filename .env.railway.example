# ============================================
# Variables de Entorno para Railway
# ============================================
# Copia estas variables a cada servicio en Railway
# Reemplaza los valores <placeholder> con valores reales

# ============================================
# MySQL Database (Railway lo genera automaticamente)
# ============================================
# DATABASE_URL se genera automaticamente cuando conectas MySQL en Railway
# Usa la referencia: ${{MySQL.DATABASE_URL}}

# ============================================
# ACCOUNTS SERVICE
# ============================================
DATABASE_URL=${{MySQL.DATABASE_URL}}
DJANGO_SECRET_KEY=<genera-con-python-secrets>
DJANGO_DEBUG=0
ALLOWED_HOSTS=*.railway.app,*.up.railway.app
JWT_SECRET=<jwt-secret-compartido-entre-servicios>
CORS_ALLOWED_ORIGINS=https://<tu-frontend>.up.railway.app
CORS_ALLOW_ALL_ORIGINS=true
CSRF_TRUSTED_ORIGINS=https://*.railway.app,https://*.up.railway.app
TIME_ZONE=America/Bogota
ADMIN_EMAIL=admin@tudominio.com
ADMIN_PASSWORD=<password-seguro>
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=Sistema

# ============================================
# SPACES SERVICE
# ============================================
DATABASE_URL=${{MySQL.DATABASE_URL}}
DJANGO_SECRET_KEY=<genera-otra-clave>
DJANGO_DEBUG=0
ALLOWED_HOSTS=*.railway.app,*.up.railway.app
JWT_SECRET=<mismo-jwt-secret>
CORS_ALLOWED_ORIGINS=https://<tu-frontend>.up.railway.app
CORS_ALLOW_ALL_ORIGINS=true
CSRF_TRUSTED_ORIGINS=https://*.railway.app,https://*.up.railway.app
TIME_ZONE=America/Bogota
RESERVATIONS_BASE_URL=https://<tu-reservations-service>.up.railway.app/api

# ============================================
# RESERVATIONS SERVICE
# ============================================
DATABASE_URL=${{MySQL.DATABASE_URL}}
DJANGO_SECRET_KEY=<genera-otra-clave>
DJANGO_DEBUG=0
ALLOWED_HOSTS=*.railway.app,*.up.railway.app
JWT_SECRET=<mismo-jwt-secret>
CORS_ALLOWED_ORIGINS=https://<tu-frontend>.up.railway.app
CORS_ALLOW_ALL_ORIGINS=true
CSRF_TRUSTED_ORIGINS=https://*.railway.app,https://*.up.railway.app
TIME_ZONE=America/Bogota
SPACES_BASE_URL=https://<tu-spaces-service>.up.railway.app/api
RESERVATION_MIN_DURATION_MINUTES=30
RESERVATION_MAX_DURATION_HOURS=4

# ============================================
# FRONTEND
# ============================================
ACCOUNTS_SERVICE_URL=https://<tu-accounts-service>.up.railway.app
SPACES_SERVICE_URL=https://<tu-spaces-service>.up.railway.app
RESERVATIONS_SERVICE_URL=https://<tu-reservations-service>.up.railway.app

# ============================================
# GENERAR CLAVES SECRETAS
# ============================================
# DJANGO_SECRET_KEY:
# python -c "import secrets; print(secrets.token_urlsafe(50))"
#
# JWT_SECRET (usar el mismo en todos los servicios):
# python -c "import secrets; print(secrets.token_urlsafe(32))"
