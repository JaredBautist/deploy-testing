# ===========================================
# Variables de Entorno - Contenedor Unificado
# ===========================================
# Copia este archivo a .env y configura los valores

# Base de datos MySQL (una sola BD para todos los servicios)
# En Railway, usa la referencia: ${{MySQL.DATABASE_URL}}
# O configura individualmente:
DB_HOST=localhost
DB_PORT=3306
DB_NAME=libapartado_db
DB_USER=libapartado_user
DB_PASSWORD=secure_password_here

# Django Settings (compartido por todos los servicios)
DJANGO_SECRET_KEY=genera-una-clave-secreta-larga-aqui
DJANGO_DEBUG=0
ALLOWED_HOSTS=*.railway.app,*.up.railway.app,localhost,127.0.0.1

# JWT (DEBE ser el mismo para todos los servicios)
JWT_SECRET=tu-jwt-secret-super-seguro

# CORS
CORS_ALLOWED_ORIGINS=https://tu-app.up.railway.app
CORS_ALLOW_ALL_ORIGINS=false
CSRF_TRUSTED_ORIGINS=https://*.railway.app,https://*.up.railway.app

# Timezone
TIME_ZONE=America/Bogota

# Admin inicial
ADMIN_EMAIL=admin@tudominio.com
ADMIN_PASSWORD=password_seguro
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=Sistema

# Reservations config
RESERVATION_MIN_DURATION_MINUTES=30
RESERVATION_MAX_DURATION_HOURS=4

# ===========================================
# Notas de Railway:
# ===========================================
# 1. Agrega una base de datos MySQL al proyecto
# 2. Configura estas variables en el servicio
# 3. Usa referencias como ${{MySQL.DATABASE_URL}} si prefieres
